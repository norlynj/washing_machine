<section style="margin-top: 34px;">
    <div></div>
    <div>
        <div class="container">
            <h1 style="font-size: 29px;text-align: center;font-family: 'Poppins';font-weight: bold;margin-bottom: 33px;margin-right: -3px;">Manage Staff</h1>
            <div class="row justify-content-center">
                <div class="col-md-4 col-xxl-1" style="height: 31px;margin-top: 3px;margin-right: -10px;width: 42.656px;">
                    <div style="margin: auto;min-width: auto;width: 30px;"><a href="#"><i class="fa fa-filter" style="font-size: 25px;min-width: auto;margin: auto;"></i></a></div>
                </div>
                <div class="col-9 col-sm-6 col-md-4 col-xl-3 col-xxl-2" style="padding-right: 1px;width: 221.5px;">
                    <div style="min-width: auto;width: 192.5px;"><input class="shadow-sm form-control-sm" type="search" name="search customeer" placeholder="Search Staff" autofocus style="border-width: 0px;border-radius: 14px;padding-left: 18px;min-width: auto;width: 201.5px;font-family: 'Poppins';" /></div>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-1 col-xxl-1 text-center" style="width: 146px;">
                    <div style="height: 34px;"><button class="btn btn-outline-light btn-sm shadow-sm float-end mb-3 add-row" type="button" style="background: var(--bs-primary);font-family: 'Poppins';font-size: 11px;border-radius: 30px;"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" style="font-size: 17px;">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M8 11C10.2091 11 12 9.20914 12 7C12 4.79086 10.2091 3 8 3C5.79086 3 4 4.79086 4 7C4 9.20914 5.79086 11 8 11ZM8 9C9.10457 9 10 8.10457 10 7C10 5.89543 9.10457 5 8 5C6.89543 5 6 5.89543 6 7C6 8.10457 6.89543 9 8 9Z" fill="currentColor"></path>
                                <path d="M11 14C11.5523 14 12 14.4477 12 15V21H14V15C14 13.3431 12.6569 12 11 12H5C3.34315 12 2 13.3431 2 15V21H4V15C4 14.4477 4.44772 14 5 14H11Z" fill="currentColor"></path>
                                <path d="M18 7H20V9H22V11H20V13H18V11H16V9H18V7Z" fill="currentColor"></path>
                            </svg><strong>Â Add Staff</strong></button></div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div id="myTable" class="table-responsive shadow-sm" style="border-style: none;border-radius: 20px;min-width: auto;min-height: auto;margin-top: 9px;font-family: 'Poppins';">
                        <table class="table table-striped table-hover table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center" style="min-width: auto;">ID</th>
                                    <th style="text-align: center;min-width: auto;width: 220.141px;">NAME</th>
                                    <th style="text-align: center;min-width: auto;width: 141.594px;">CONTACT</th>
                                    <th style="text-align: center;min-width: auto;">DATE JOINED</th>
                                    <th class="text-center" style="width: 500px;min-width: auto;">ACTIONS</th>
                                </tr>
                            </thead>
                            <tbody style="text-align: center;">
                                <% @users.each do |user| %>
                                    <tr>
                                        <td><%= user.id %></td>
                                        <td><%= "#{user.first_name} #{user.last_name}" %></td>
                                        <td><%= user.mobile_number %></td>
                                        <td><%= user.created_at.strftime('%m-%d-%Y') %></td>
                                        <td class="text-center" style="width: 70.1719px;">
                                            <button class="btn btn-success" type="button" style="font-size: 10px;border-radius: 20px;margin-right: 5px;margin-top: 2px;margin-bottom: 2px;">Edit Profile</button>
                                            <button class="btn btn-dark" type="button" style="font-size: 10px;border-radius: 20px;margin-right: 5px;margin-top: 2px;margin-bottom: 2px;">Placed Orders</button>
                                            <button class="btn btn-dark" type="button" style="font-size: 10px;border-radius: 20px;margin-right: 5px;margin-top: 2px;margin-bottom: 2px;">Transactions</button>
                                            <button class="btn btn-dark" type="button" style="font-size: 10px;border-radius: 20px;margin-right: 5px;margin-top: 2px;margin-bottom: 2px;">Performance</button>
                                            <button class="btn btn-danger" type="button" style="font-size: 10px;border-radius: 20px;margin-right: 5px;margin-top: 2px;margin-bottom: 2px;">Delete</button>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
