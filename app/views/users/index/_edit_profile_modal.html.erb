<!-- app/views/shared/_edit_profile_modal.html.erb -->
<div id="modal-edit-<%= user.id %>" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Staff Profile</h4>
                <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <%= form_with(model: user, url: user_crew_path(user), method: :patch, html: { class: 'focus-ring', style: 'border-radius: 56px;border-style: none;' }, local: true) do |f| %>
                    <div class="avatar">
                        <div class="avatar-bg center" style="margin-bottom: 27px;margin-top: 28px;"></div>
                    </div>
                    <%= f.file_field :avatar, class: 'form-control form-control-sm', style: 'font-family: Poppins;margin-bottom: 8px;border-style: solid;' %>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= f.label :first_name, 'Firstname', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.text_field :first_name, class: 'form-control', style: 'border-width: 1px;border-style: solid;', required: true %>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= f.label :last_name, 'Lastname', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.text_field :last_name, class: 'form-control', style: 'border-style: solid;', required: true %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= f.label :email, 'Email', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.email_field :email, class: 'form-control', autocomplete: 'off', required: true, style: 'border-style: solid;' %>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= f.label :mobile_number, 'Mobile number', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.text_field :mobile_number, class: 'form-control', style: 'border-style: solid;' %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6" style="width: 131.656px;">
                            <div class="form-group mb-3">
                                <%= f.label :gender, 'Gender', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.text_field :gender, class: 'form-control', required: true, style: 'min-width: auto;border-style: solid;' %>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3">
                                <%= f.label :birthday, 'Birthday', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.date_field :birthday, class: 'form-control', required: true, style: 'font-family: Poppins;border-style: solid;' %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= f.label :password, 'Password', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.password_field :password, class: 'form-control', autocomplete: 'off', required: true, style: 'border-style: solid;' %>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= f.label :password_confirmation, 'Confirm Password', class: 'form-label', style: 'font-family: Poppins;' %>
                                <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', required: true, style: 'border-style: solid;' %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
                        <%= f.submit 'Update Staff Profile', class: 'btn btn-primary' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
