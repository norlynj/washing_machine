<div id="modal-1" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="font-family: 'Poppins';font-weight: bold;">Add new item</h4>
        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @inventory, url: inventories_path, local: true) do |form| %>
          <div class="form-floating mb-3">
            <%= form.text_field :name, id: "inventory_name", class: "focus-ring form-control", inputmode: "text" %>
            <%= form.label :name, "Item Name", class: "form-label", style: "font-family: 'Poppins';color: var(--bs-body-color);", required: true %>
          </div>
          <div class="form-floating mb-3">
            <%= form.number_field :quantity, class: "form-control form-control-lg quantity-field", min: 0, step: 1, required: true %>
            <%= form.label :quantity, "Quantity", class: "form-label", style: "font-family: 'Poppins';color: var(--bs-body-color);", required: true %>
          </div>
          <div class="modal-footer">
            <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
            <%= form.submit "Add item", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

