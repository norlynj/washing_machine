<div id="modal-edit-quantity-<%= inventory.id %>" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" style="font-family: 'Poppins';font-weight: bold;"><%= inventory.name %> Stock</h4>
        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: inventory, url: inventory_path(inventory), method: :patch, local: true) do |form| %>
          <div class="row" style="text-align: center;">
            <div class="col-auto col-md-4">
              <%= form.number_field :quantity, class: "form-control form-control-lg quantity-field", id: "quantity_#{inventory.id}", min: 0, step: 1, required: true %>
            </div>
          </div>
          <div class="modal-footer">
            <button class="btn btn-light" type="button" data-bs-dismiss="modal">Close</button>
            <%= form.submit "Save", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    // Increment button click handler
    $('.increment-btn').click(function() {
      var quantityField = $(this).closest('.row').find('.quantity-field');
      var currentQuantity = parseInt(quantityField.val());
      quantityField.val(currentQuantity + 1);
    });

    // Decrement button click handler
    $('.decrement-btn').click(function() {
      var quantityField = $(this).closest('.row').find('.quantity-field');
      var currentQuantity = parseInt(quantityField.val());
      if (currentQuantity > 0) {
        quantityField.val(currentQuantity - 1);
      }
    });
  });
</script>


