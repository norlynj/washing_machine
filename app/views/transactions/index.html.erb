<section style="margin-top: 34px;">
    <div></div>
    <div>
        <div class="container">
            <h1 style="font-size: 29px;text-align: center;font-family: 'Poppins';font-weight: bold;margin-bottom: 33px;margin-right: -3px;color: var(--bs-emphasis-color);">Transactions Overview</h1>
            <div class="row justify-content-center" style="margin-bottom: 10px;">
                <div class="col-md-4 col-xxl-1" style="height: 31px;margin-top: 3px;margin-right: -10px;width: 42.656px;">
                    <div style="margin: auto;min-width: auto;width: 30px;"><a href="#"><i class="fa fa-filter" style="font-size: 25px;min-width: auto;margin: auto;"></i></a></div>
                </div>
                <div class="col-9 col-sm-6 col-md-4 col-xl-3 col-xxl-2" style="padding-right: 1px;width: 221.5px;">
                    <div style="min-width: auto;width: 192.5px;"><input class="shadow-sm form-control-sm" type="search" name="search customeer" placeholder="Search Transaction" autofocus style="border-width: 0px;border-radius: 14px;padding-left: 18px;min-width: auto;width: 201.5px;font-family: 'Poppins';" /></div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div id="myTable-1" class="table-responsive shadow-sm" style="border-style: none;border-radius: 20px;min-width: auto;min-height: auto;margin-top: 9px;font-family: 'Poppins';">
                        <table class="table table-striped table-hover table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 57.969px;text-align: center;min-width: auto;">ID</th>
                                    <th style="text-align: center;">CUSTOMER</th>
                                    <th style="text-align: center;min-width: auto;width: 214.141px;">SERVICE AVAILED</th>
                                    <th style="text-align: center;min-width: auto;width: 141.594px;">DATE</th>
                                    <th style="text-align: center;width: 219.125px;">STAFF IN-CHARGE</th>
                                    <th class="text-center" style="width: 96px;min-width: auto;">ACTION</th>
                                </tr>
                            </thead>
                            <tbody style="text-align: center;">
                                <% @orders.each do |order| %>
                                    <tr>
                                        <td><%= order.id %></td>
                                        <td><%= order.customer.name %></td>
                                        <td><%= order.status %></td>
                                        <td><%= order.date_time.strftime('%m-%d-%Y') %></td>
                                        <td><%#= order.staff_in_charge %><%= "Staff In Charge" %></td>
                                        <td class="text-center" style="width: 66.1719px;"><a class="del-row" href="javascript:void(0);"><i class="fas fa-trash" style="font-size: 20px;margin-left: 9px;"></i></a></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
