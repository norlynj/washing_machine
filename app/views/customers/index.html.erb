<section style="margin-top: 34px;">
    <div></div>
    <div>
        <div class="container">
            <h1 style="font-size: 29px;text-align: center;font-family: 'Poppins';font-weight: bold;margin-bottom: 33px;margin-right: -3px;"> <%if current_user.manager?%> Manage Customers <%else%> Customers <%end%></h1>
            <div class="row justify-content-center">
                <div class="col-9 col-sm-6 col-md-4 col-xl-3 col-xxl-2" style="padding-right: 1px;width: 221.5px;">
                    <%= form_tag(customers_path, method: :get, class: "form-inline") do %>
                        <%= text_field_tag :search, params[:search], class: "shadow-sm form-control-sm", placeholder: "Search Customer", autofocus: true, style: "border-width: 0px;border-radius: 14px;padding-left: 18px;min-width: auto;width: 201.5px;font-family: 'Poppins';" %>
                    <% end %>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-1 col-xxl-1 text-center" style="width: 146px;">
                    <div style="height: 34px;">
                        <button class="btn btn-outline-light btn-sm shadow-sm float-end mb-3 add-row" type="button" style="background: var(--bs-primary);font-family: 'Poppins';font-size: 11px;border-radius: 30px;" data-bs-target="#modal-3" data-bs-toggle="modal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" style="font-size: 17px;">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M8 11C10.2091 11 12 9.20914 12 7C12 4.79086 10.2091 3 8 3C5.79086 3 4 4.79086 4 7C4 9.20914 5.79086 11 8 11ZM8 9C9.10457 9 10 8.10457 10 7C10 5.89543 9.10457 5 8 5C6.89543 5 6 5.89543 6 7C6 8.10457 6.89543 9 8 9Z" fill="currentColor"></path>
                            <path d="M11 14C11.5523 14 12 14.4477 12 15V21H14V15C14 13.3431 12.6569 12 11 12H5C3.34315 12 2 13.3431 2 15V21H4V15C4 14.4477 4.44772 14 5 14H11Z" fill="currentColor"></path>
                            <path d="M18 7H20V9H22V11H20V13H18V11H16V9H18V7Z" fill="currentColor"></path>
                        </svg>
                        <strong>Â Add Customer</strong>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div id="myTable" class="table-responsive shadow-sm" style="border-style: none;border-radius: 20px;min-width: auto;min-height: auto;margin-top: 9px;font-family: 'Poppins';">
                        <table class="table table-striped table-hover table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 70.2344px;">+Order</th>
                                    <th style="text-align: center;min-width: auto;width: 220.141px;">NAME<a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none">
                                                <path d="M9.1716 6.45504L7.75739 5.04083L12 0.798187L16.2426 5.04083L14.8284 6.45504L13.0001 4.62667V19.3733L14.8284 17.5449L16.2426 18.9592L12 23.2018L7.75739 18.9592L9.1716 17.5449L11.0001 19.3734V4.62658L9.1716 6.45504Z" fill="currentColor"></path>
                                            </svg></a></th>
                                    <th style="text-align: center;min-width: auto;width: 141.594px;">CONTACT<a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none">
                                                <path d="M9.1716 6.45504L7.75739 5.04083L12 0.798187L16.2426 5.04083L14.8284 6.45504L13.0001 4.62667V19.3733L14.8284 17.5449L16.2426 18.9592L12 23.2018L7.75739 18.9592L9.1716 17.5449L11.0001 19.3734V4.62658L9.1716 6.45504Z" fill="currentColor"></path>
                                            </svg></a></th>
                                    <th style="text-align: center;">ADDRESS<a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none">
                                                <path d="M9.1716 6.45504L7.75739 5.04083L12 0.798187L16.2426 5.04083L14.8284 6.45504L13.0001 4.62667V19.3733L14.8284 17.5449L16.2426 18.9592L12 23.2018L7.75739 18.9592L9.1716 17.5449L11.0001 19.3734V4.62658L9.1716 6.45504Z" fill="currentColor"></path>
                                            </svg></a></th>
                                    <%if current_user.manager? %><th class="text-center" style="width: 88px;">Action</th> <%end%>
                                </tr>
                            </thead>
                            <tbody style="text-align: center;">
                                <!-- Loop through customers and generate table rows -->
                                <% @customers.each do |customer| %>
                                    <tr>
                                        <td class="text-center"><a href="#" data-bs-target="#modal-2-<%= customer.id %>" data-bs-toggle="modal"><svg class="bi bi-plus-circle-fill" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" style="font-size: 20px;">
                                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z"></path>
                                                </svg></a></td>
                                        <td><%= customer.name %></td>
                                        <td><%= customer.contact_info %></td>
                                        <td><%= customer.address %></td>
                                        <%if current_user.manager?%><td class="text-center" style="width: 66.1719px;">
                                            <a class="del-row" href="javascript:void(0);">
                                                <i class="fas fa-history" style="font-size: 20px;"></i>
                                            </a>
                                            <a class="del-row" href="javascript:void(0);">
                                                <i class="fas fa-edit" style="font-size: 20px;margin-left: 9px;" data-bs-target="#modal-1-<%= customer.id %>" data-bs-toggle="modal"></i>
                                            </a>
                                        </td>
                                        <%end%>
                                    </tr>
                                <% end %>
                                <!-- End of customer loop -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<!-- Render the modals after the table to maintain layout -->
<% @customers.each do |customer| %>
    <%= render 'customers/index/edit_customer_modal', customer: customer %>
    <%= render 'customers/index/add_order_modal', customer: customer %>
<% end %>
<%= render 'customers/index/add_customer_modal' %>
