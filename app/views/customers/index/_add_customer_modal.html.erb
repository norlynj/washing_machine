<div id="modal-3" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-family: 'Poppins';font-weight: bold;">Add New Customer</h4>
                <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <%= form_with(url: customers_path, method: :post, class: "focus-ring", style: "border-radius: 56px; border-style: none;", local: true) do |form| %>
                    <div class="avatar"></div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group mb-3">
                                <%= form.label :name, class: "form-label", style: "font-family: 'Poppins';" %>
                                <%= form.text_field :name, class: "form-control", style: "border-width: 1px; border-style: solid;" %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= form.label :email, "Email", class: "form-label", style: "font-family: 'Poppins';" %>
                                <%= form.email_field :email, autocomplete: "off", required: true, class: "form-control", style: "border-style: solid;" %>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <%= form.label :mobile, "Mobile number", class: "form-label", style: "font-family: 'Poppins';" %>
                                <%= form.text_field :contact_info, class: "form-control", style: "border-style: solid;" %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group mb-3">
                                <%= form.label :address, "Address", class: "form-label", style: "font-family: 'Poppins';" %>
                                <%= form.text_field :address, class: "form-control", style: "border-style: solid;" %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
                        <%= form.submit "Add New Customer", class: "btn btn-primary", style: "font-family: 'Poppins';" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
