<div class="card w-50 m-auto p-5 rounded-5">
  <div class="card-body">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
        <%= f.label :email, "Email address", class: "form-label", for: "floatingInput" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", id: "floatingInput", autocomplete: "current-password", placeholder: "password" %>
        <%= f.label :password, "Password", class: "form-label", for: "floatingInput" %><br />
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>